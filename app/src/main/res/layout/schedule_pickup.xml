<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/cardview_light_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.hari.isthreeinjava.SchedulePickup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/datebtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bbkg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Schedule pickup"
            android:textColor="@color/cardview_light_background"
            tools:layout_editor_absoluteX="234dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address"
                android:textColor="@color/bluee"
                android:textSize="14sp" />

            <Button
                android:id="@+id/changeadress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/cardview_light_background"
                android:text="Change Address"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adressss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="5dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jobid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"

                    android:gravity="left"
                    android:paddingLeft="2dp"
                    android:text="Door No/Street"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Job Id"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/custid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"

                    android:gravity="left"
                    android:paddingLeft="2dp"
                    android:text="Landmark"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Customer ID"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"

                    android:gravity="left"
                    android:paddingLeft="2dp"
                    android:text="City"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Date"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/delstatus2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"

                    android:gravity="left|center_horizontal|center"
                    android:paddingLeft="2dp"
                    android:text="State"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Delivery Status"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/grandtotal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Pincode"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Grand Total"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/grandtota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1.5"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Phone"
                    android:textColor="@color/bluee"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="left|center"
                    android:paddingLeft="2dp"
                    android:text="Grand Total"
                    android:textColor="@color/bluee"
                    android:textSize="12sp" />

            </TableRow>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Express Delivery"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/expresstxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/expressdeliverytext"
            android:textColor="@color/bluee"
            android:textSize="10sp" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bbkg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Confirm Pickup"
            android:textColor="@color/cardview_light_background"
            tools:layout_editor_absoluteX="234dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/thursdaymsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Note: Pickups Scheduled before 9:00 am will be delivered on same day for express delivery."
            android:textColor="@color/red"
            android:textSize="10sp" />

    </LinearLayout>


</ScrollView>
