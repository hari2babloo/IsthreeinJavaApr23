<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:gravity="end"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/referandearn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="?selectableItemBackground"
                    android:drawableTop="@mipmap/refer22"
                    android:text="  Refer &amp; Earn  "
                    android:textColor="@color/bluee"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/logo" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/bluee"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/marqu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="We are open on all days.                                                                      "
                    android:textColor="@color/red" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center"

                android:orientation="vertical">


                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFDADADA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/pickup"


                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="?selectableItemBackground"

                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:theme="@style/AppTheme.GreenRipple"
                        app:srcCompat="@drawable/schedule2" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFDADADA" />

                    <ImageButton
                        android:id="@+id/placeordr"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:theme="@style/AppTheme.GreenRipple"
                        app:srcCompat="@drawable/enterorder" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFDADADA" />


                    <ImageButton
                        android:id="@+id/myorders"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:theme="@style/AppTheme.GreenRipple"
                        app:srcCompat="@drawable/my_orders" />


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFDADADA" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100dp"-->
                <!--android:gravity="bottom|center"-->
                <!--android:orientation="horizontal"-->

                <!--&gt;-->


                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/wallet"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:theme="@style/AppTheme.GreenRipple"
                        app:srcCompat="@drawable/ww" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFDADADA" />

                    <ImageButton
                        android:id="@+id/cust"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="?selectableItemBackground"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:theme="@style/AppTheme.GreenRipple"
                        app:srcCompat="@drawable/customersupport" />


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>